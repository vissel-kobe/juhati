<div class="users-regisitations-new flex">
  <div class="leftside"></div>
  <main class="main">
    <h2 class="page-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <span class="label">氏名</span>
        <%= f.label :family_name, "(姓)", class: "label-sub" %>
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
        <%= f.label :first_name, "(名)", class: "label-sub" %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <span class="label">氏名(フリガナ)</span>
        <%= f.label :kana_family_name, "(姓)", class: "label-sub" %>
        <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %>
        <%= f.label :kana_first_name, "(名)", class: "label-sub" %>
        <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
      </div>

      <div class="field">
        <%= f.label :postcode, "郵便番号", class: "large-label" %>
        <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode", class: "" %>
      </div>

      <div class="field">
        <%= f.label :address, "住所", class: "large-label" %>
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :telephone, "電話番号", class: "large-label" %>
        <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
      </div>
      <div class="field">
          <%= f.label :email, "メールアドレス", class: "large-label" %>
          <%= f.email_field :email %>
      </div>
      <div class="submit">
        <%= f.submit "新規登録", class: "actions btn btn-success" %>
      </div>

    <% end %>

  </main>
  <div class="rightside"></div>
</div>

