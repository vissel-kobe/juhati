<div class="labels-index flex">
  <div class="leftside"></div>
  <main class="main">
    <h2 class="page-title">レーベル一覧</h2>
    <div class="labels-index inner flex">
      <% @labels.each do |label| %>
        <div class="album-item text-center">
          <%= link_to label.name, edit_label_path(label) %>
          <%= link_to "削除", label_path(label), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
        </div>
      <% end %>
      <div class="link">
        <%= link_to "レーベルを追加する✔️", new_label_path, class: "link_to-signup-btn" %>
      </div>
    </div>
  </main>
  <div class="rightside"></div>
</div>

