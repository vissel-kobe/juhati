<div class="login-container clearfix">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-field">
      <div class="login-name">
        <span>メールアドレス</span>
      </div>
      <div class="login-box">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"email-box" %>
      </div>
    </div>

    <div class="login-field">
      <div class="login-name">
        <span>パスワード</span>
      </div>
      <div class="login-box">
        <%= f.password_field :password, autocomplete: "off", class:"password-box" %>
      </div>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <%= link_to "新規登録はこちら→", new_user_registration_path, style:"float:right;" %>
</div>
