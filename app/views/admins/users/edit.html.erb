<div class="users-regisitations-new flex">
  <div class="leftside"></div>
  <main class="main">
    <h2 class="page-title">会員情報編集</h2>

    <%= form_for @user, url: admins_user_path(@user), method: :patch do |f| %>
      <div class="field">
        <span class="label">氏名</span>
        <%= f.label :（姓） %>
        <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
        <%= f.label :（名） %>
        <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
      </div>

      <div class="field">
        <span class="label">氏名(フリガナ)</span>
        <%= f.label :（姓） %>
        <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %>
        <%= f.label :（名） %>
        <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
      </div>

      <div class="field">
        <span class="label">郵便番号</span>
        <div class="field-textbox ml54px">
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
        </div>
      </div>

      <div class="field">
        <span class="label">住所</span>
        <div class="field-textbox ml54px">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="field">
        <span class="label">電話番号</span>
        <div class="field-textbox ml54px">
          <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
        </div>
      </div>

      <div class="field">
        <span class="label">メールアドレス</span>
        <div class="field-textbox ml54px">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="flex is-between">
        <%= f.submit "保存する", class: "actions btn btn-success" %>
        <%= link_to "退会させる", admins_delete_user_path(@user),"data-confirm" => "本当にこの会員を退会させますか？", method: :delete, class: "btn btn-danger" %>
      </div>

    <% end %>

  </main>
  <div class="rightside"></div>
</div>