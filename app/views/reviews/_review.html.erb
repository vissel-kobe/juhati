<tr>
	<% reviewer = User.find(review.user_id) %>
	<td class="td-username flex">
		<%= reviewer.family_name %><span class="space-between-name"></span><%= reviewer.first_name %>
	</td>
	<td class="td-review"><%= review.body %></td>
	<% if user_signed_in? && reviewer.id == current_user.id %>
		<td><%= link_to "編集する", edit_album_review_path(album_id: review.album_id, id: review.id), class: "btn btn-primary" %></td>
		<td><%= link_to "削除する", album_review_path(album_id: review.album_id, id: review.id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
	<% else %>
		<td></td>
		<td></td>
	<% end %>
</tr>
