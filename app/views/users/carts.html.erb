<div class="users-carts flex">
	<div class="leftside"></div>
	<main class="main">
		<h2 class="page-title">カート</h2>
		<div class="inner">
			<table class="albums-in-cart">
				<thead></thead>
				<tbody>
					<% @orders.each do |cart| %>
						<% cart_album = Album.find(cart.album_id) %>
						<tr>
							<td>
								<%= link_to album_path(cart_album.id), class: "flex" do %>
									<%= attachment_image_tag cart_album, :album_image, format:"jpeg", class: "album-small-img", fallback: "no-image.jpg" %>
									<p class="title-haslink"><%= cart_album.title %></p>
								<% end %>
							</td>
							<td><%= cart_album.price %> 円(税込み)</td>
							<td></td>
							<td><%= link_to "カートから削除する", album_orders_path(album_id: cart_album.id), class: "btn btn-danger", method: :delete %>
							</td>
						</tr>
					<% end %>
			</table>
		</div>
	</main>
	<div class="rightside"></div>
</div>
