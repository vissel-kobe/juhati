<div class="users-regisitations-new flex">
  <div class="leftside"></div>
  <main class="main">
    <h2 class="page-title">新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <span class="label">氏名</span>
        <div class="">
          <%= f.label :（姓） %>
          <%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %>
        </div>
        <div class="">
          <%= f.label :（名） %>
          <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
        </div>
      </div>

      <div class="field">
        <span class="label">氏名(フリガナ)</span>
        <div class="">
          <%= f.label :（姓） %>
          <%= f.text_field :kana_family_name, autofocus: true, autocomplete: "kana_family_name" %>
        </div>
        <div class="">
          <%= f.label :（名） %>
          <%= f.text_field :kana_first_name, autofocus: true, autocomplete: "kana_first_name" %>
        </div>
      </div>

      <div class="field">
        <span class="label">郵便番号</span>
        <div class="field-textbox ml54px">
          <%= f.text_field :postcode, autofocus: true, autocomplete: "postcode" %>
        </div>
      </div>

      <div class="field">
        <span class="label">住所</span>
        <div class="field-textbox ml54px">
          <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
        </div>
      </div>

      <div class="field">
        <span class="label">電話番号</span>
        <div class="field-textbox ml54px">
          <%= f.text_field :telephone, autofocus: true, autocomplete: "telephone" %>
        </div>
      </div>

      <div class="field">
        <span class="label">メールアドレス</span>
        <div class="field-textbox ml54px">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="field">
        <span class="label">パスワード</span>
        <div class="field-textbox ml54px">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
      </div>

      <div class="field">
        <span class="label">パスワード（確認用）</span>
        <div class="field-textbox ml54px">
          <%= f.password_field :password_confirmation, autocomplete: "off" %>
        </div>
      </div>

      <%= f.submit "新規登録", class: "actions btn btn-success" %>

    <% end %>

  </main>
  <div class="rightside"></div>
</div>

