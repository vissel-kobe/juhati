<% if user_signed_in? %>
	<% if album.favorited_by?(current_user) %>
	    <%= link_to album_favorites_path(album), method: :delete do %>
	      <i class="fas fa-heart red-icon" aria-hidden="true"></i>
	      <%= album.favorites.count %>いいね
	  <% end %>
	<% else %>
	  <%= link_to album_favorites_path(album), method: :post do %>
	    <i class="fas fa-heart" aria-hidden:="true"></i>
	    <%= album.favorites.count %>いいね
	  <% end %>
	<% end %>
<% end %>