<div class="genres-index flex">
  <div class="leftside"></div>
  <main class="main">
    <h2 class="page-title">ジャンル一覧</h2>
    <div class="genres-index inner flex">
      <% @genres.each do |genre| %>
        <div class="genre-item text-center">
          <%= link_to genre.name, edit_genre_path(genre) %>
          <%= link_to "削除", genre_path(genre), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
        </div>
      <% end %>
      <div class="link">
        <%= link_to "ジャンルを追加する✔️", new_genre_path, class: "link_to-signup-btn" %>
      </div>
    </div>
  </main>
  <div class="rightside"></div>
</div>

