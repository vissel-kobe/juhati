<div class="background-image">
  <div class="center-box clearfix">
    <% @albums.each do |album| %>
      <div class="album-box">
        <%= attachment_image_tag album, :album_image, size:"100x100", format:"jpeg", class:"album-img" %><br>
        <%= link_to "#{album.title}", album_path(album) %>
      </div>
    <% end %>
  </div>
</div>
