<div class="leftside"></div>
<main class="main">
	<h2 class="page-title">商品追加</h2>
	<div class="album-form">
		<%= form_for album do |f| %>
			<%= render "devise/shared/error_messages", resource: @album %>
			<div class="field">
				<span class="label">タイトル</span>
				<div class="field-textbox">
					<%= f.text_field :title, id: "title" %>
				</div>
			</div>
			<div class="field">
				<span class="label">画像</span>
				<div class="image-field">
					<%= f.attachment_field :album_image, id: "album_image" %>
				</div>
			</div>
			<div class="field">
				<span class="label">ステータス</span>
				<div class="field-selectbox">
					<%= f.select :status, Album.statuses.keys.map {|k| [I18n.t("enums.album.status.#{k}"), k]} %>
				</div>
			</div>
			<div class="field">
				<span class="label">価格（税込み）</span>
				<div class="field-textbox">
					<%= f.number_field :price, id: "price" %>
					<span>円</span>
				</div>
			</div>
			<div class="field">
				<span class="label">ジャンル</span>
				<div class="field-selectbox">
					<%= f.collection_select :genre_id, Genre.all, :id, :name %>
				</div>
			</div>
			<div class="field">
				<span class="label">レーベル</span>
				<div class="disc-field">
					<%= f.collection_select :label_id, Label.all, :id, :name %>
				</div>
			</div>
			<div class="field">
				<span class="label">シングル/アルバム内</span>
				<div class="field">
					<%= f.fields_for :discs do |f| %>
					<%= render "disc_fields", f: f %>
					<% end %>
					<div class="links">
						<%= link_to_add_association "+", f, :discs,class: "disc_btn" %>
					</div>
				</div>
			</div>
			<div class="field">
				<span class="label">在庫</span>
				<div class="field-textbox">
					<%= f.number_field :stock, id: "stock" %>
				</div>
			</div>

			<%= f.submit submit, class: "btn btn-success", id: "submit", disabled: true, style: "background-color: gray;" %>

		<% end %>
	</div>
</main>
<div class="rightside"></div>