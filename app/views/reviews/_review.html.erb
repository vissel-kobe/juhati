<tr>
	<% review_user = User.find(review.user_id) %>
	<td class="td-username flex">
		<%= review_user.family_name %><span class="space-between-name"></span><%= review_user.first_name %>
	</td>
	<td class="td-review"><%= review.body %></td>
	<% if review_user.id == current_user.id %>
		<td><%= link_to "編集する", edit_album_review_path(id:review.id, album_id: review.album_id), class: "btn btn-primary" %></td>
		<td><%= link_to "削除する", album_review_path(id:review.id, album_id: review.album_id), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %></td>
	<% else %>
		<td></td>
		<td></td>
	<% end %>
</tr>
