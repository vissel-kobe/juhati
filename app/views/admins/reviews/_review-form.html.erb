<%= form_for review, url: admins_album_review_path(album_id: album.id, id: review.id), method: :patch do |f| %>
    <div class="review-field clearfix">
      <span class="label review-label">レビュー内容</span>
      <%= f.text_area :body, class: "review-form-body" %>
      <%= f.submit "OK!", class: "btn btn-success" %>
    </div>
<% end %>