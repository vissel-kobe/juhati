<div class="background-image">
  <div class="center-box">
  <h2>ジャンル一覧<h2>
    <div class="genres">
      <% @genres.each do |genre| %>
        <%= genre.name %>
        <%= link_to "削除", genre_path(genre), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
      <% end %>
    </div>
    <div class="link">
      <%= link_to "ジャンルを追加する✔️", new_genre_path %>
    </div>
  </div>
</div>
